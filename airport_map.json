{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Global Airport Distribution - 2023",
      "fontSize": 16,
      "anchor": "middle"
    },
    "width": 700,
    "height": 350,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "#d0d0d0",
          "stroke": "white",
          "strokeWidth": 0.5
        }
      },
      {
        "data": {"graticule": {"step": [30, 30]}},
        "mark": {
          "type": "geoshape",
          "fill": null,
          "stroke": "#87CEEB",
          "strokeWidth": 0.5,
          "strokeOpacity": 0.6
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/jpatokal/openflights/master/data/airports.dat",
          "format": {
            "type": "csv",
            "header": ["id", "name", "city", "country", "iata", "icao", "latitude", "longitude", "altitude", "timezone", "dst", "tz", "type", "source"],
            "parse": {
              "latitude": "number",
              "longitude": "number"
            }
          }
        },
        "transform": [
          {
            "filter": "datum.latitude != null && datum.longitude != null && datum.latitude != 0 && datum.longitude != 0"
          }
        ],
        "mark": {
          "type": "circle",
          "size": 8,
          "fill": "red",
          "fillOpacity": 0.6,
          "stroke": "darkred",
          "strokeWidth": 0.5
        },
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "tooltip": [
            {"field": "name", "type": "nominal", "title": "Airport Name"},
            {"field": "city", "type": "nominal", "title": "City"},
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "iata", "type": "nominal", "title": "IATA Code"},
            {"field": "icao", "type": "nominal", "title": "ICAO Code"}
          ]
        }
      }
    ]
  }